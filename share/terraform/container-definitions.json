[
  {
    "name": "${name}",
    "image": "${image}",
    "cpu": 10,
    "memory": 128,
    "links": [],
    "portMappings": [
      {
        "containerPort": 3000,
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "entryPoint": [],
    "command": [],
    "environment": [
      {
        "name": "API_KEYS",
        "value": "$${api_keys}"
      },
      {
        "name": "BASE_PATH",
        "value": "/${name}"
      },
      {
        "name": "LOG_LEVEL",
        "value": "${log_level}"
      }
    ],
    "mountPoints": [],
    "volumesFrom": [],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "$${awslogs-group}",
        "awslogs-region": "$${awslogs-region}",
        "awslogs-stream-prefix": "$${awslogs-stream-prefix}",
        "awslogs-multiline-pattern": "^(debug|info|warn|error):"
      }
    }
  }
]
